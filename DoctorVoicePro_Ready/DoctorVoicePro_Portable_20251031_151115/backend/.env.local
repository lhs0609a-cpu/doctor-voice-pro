# 로컬 개발용 간단한 설정 (SQLite 사용)
APP_NAME=DoctorVoice Pro
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=dev-secret-key-for-local-development-only
JWT_SECRET_KEY=dev-jwt-secret-key-for-local-development-only

